---
import { NAV_ITEMS } from '../config';
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;
---

<header class={`site-header ${currentPath === '/' ? 'home' : ''}`}>
  <div class="container">
    <div class="header-content">
      <a href="/" class="site-title">
        <span class="name-first">Praveen</span>
        <span class="name-last">Yellamaraju</span>
      </a>
      
      <div class="header-right">
        <nav class="main-nav">
          <ul>
            {NAV_ITEMS.map(item => {
              const isExternal = item.href.startsWith('http://') || item.href.startsWith('https://');
              return (
                <li>
                  <a 
                    href={item.href}
                    class={currentPath === item.href ? 'active' : ''}
                    aria-current={currentPath === item.href ? 'page' : undefined}
                    target={isExternal ? '_blank' : undefined}
                    rel={isExternal ? 'noopener noreferrer' : undefined}
                    data-external={isExternal ? 'true' : undefined}
                  >
                    {item.label}
                  </a>
                </li>
              );
            })}
          </ul>
        </nav>
        <ThemeToggle />
      </div>
      
      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu Overlay -->
  <div class="mobile-menu-overlay" id="mobile-menu-overlay">
    <div class="mobile-menu-header">
      <button class="mobile-menu-close" aria-label="Close menu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <nav class="mobile-menu-nav">
      <ul>
        {NAV_ITEMS.map(item => {
          const isExternal = item.href.startsWith('http://') || item.href.startsWith('https://');
          return (
            <li>
              <a 
                href={item.href}
                class={currentPath === item.href ? 'active' : ''}
                aria-current={currentPath === item.href ? 'page' : undefined}
                target={isExternal ? '_blank' : undefined}
                rel={isExternal ? 'noopener noreferrer' : undefined}
                data-external={isExternal ? 'true' : undefined}
              >
                {item.label}
              </a>
            </li>
          );
        })}
      </ul>
    </nav>
  </div>
</header>

<style>
  .site-header {
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(8px);
  }
  
  [data-theme="light"] .site-header,
  [data-theme="auto"] .site-header {
    background: rgba(253, 252, 251, 0.95);
  }
  
  [data-theme="dark"] .site-header {
    background: rgba(26, 26, 26, 0.95);
  }
  
  @media (prefers-color-scheme: dark) {
    [data-theme="auto"] .site-header {
      background: rgba(26, 26, 26, 0.95);
    }
  }
  
  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-md) 0;
    gap: var(--space-sm);
  }
  
  .header-right {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }
  
  .site-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--color-text);
    display: flex;
    gap: 0.4em;
    transition: opacity var(--transition-fast);
    flex-shrink: 1;
    min-width: 0;
  }
  
  .site-title:hover {
    opacity: 0.7;
  }
  
  .name-last {
    color: var(--color-text-secondary);
  }
  
  .main-nav ul {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .main-nav {
    font-family: var(--font-sans);
  }
  
  .main-nav a {
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
    position: relative;
  }
  
  .main-nav a:hover,
  .main-nav a.active {
    color: var(--color-accent);
  }
  
  .main-nav a.active::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
  }
  
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    flex-shrink: 0;
  }
  
  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--color-text);
    transition: transform var(--transition-base);
  }
  
  @media (max-width: 768px) {
    .header-content {
      display: flex;
      padding: var(--space-sm) 0;
      gap: var(--space-xs);
      position: relative;
    }
    
    .site-title {
      font-size: 1rem;
      flex: 1;
      min-width: 0;
      overflow: hidden;
    }
    
    .site-title .name-first,
    .site-title .name-last {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .header-right {
      position: relative;
      flex-shrink: 0;
      display: flex !important;
      align-items: center;
      gap: var(--space-xs);
    }
    
    .mobile-menu-toggle {
      display: flex;
      flex-shrink: 0;
      margin-left: var(--space-xs);
      z-index: 1001;
      position: relative;
    }
    
    .mobile-menu-toggle.open {
      display: none;
    }
    
    .main-nav {
      display: none;
    }
    
    /* Mobile Menu Overlay */
    .mobile-menu-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100vw;
      height: 100vh;
      background: var(--color-surface);
      z-index: 1000;
      display: none;
      flex-direction: column;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }
    
    .mobile-menu-overlay.open {
      display: flex;
    }
    
    .mobile-menu-header {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      padding: var(--space-md);
      border-bottom: 1px solid var(--color-border);
      min-height: 60px;
      flex-shrink: 0;
    }
    
    .mobile-menu-close {
      background: none;
      border: none;
      cursor: pointer;
      padding: var(--space-xs);
      color: var(--color-text);
      display: flex;
      align-items: center;
      justify-content: center;
      transition: opacity var(--transition-fast);
    }
    
    .mobile-menu-close:hover {
      opacity: 0.7;
    }
    
    .mobile-menu-close svg {
      width: 24px;
      height: 24px;
    }
    
    .mobile-menu-nav {
      flex: 1;
      padding: var(--space-md);
      overflow-y: auto;
    }
    
    .mobile-menu-nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 0;
    }
    
    .mobile-menu-nav li {
      width: 100%;
      display: block;
      border-bottom: 1px solid var(--color-border);
    }
    
    .mobile-menu-nav li:last-child {
      border-bottom: none;
    }
    
    .mobile-menu-nav a {
      display: block;
      width: 100%;
      padding: var(--space-md) 0;
      font-weight: 500;
      font-size: 1.125rem;
      color: var(--color-text);
      text-decoration: none;
      transition: color var(--transition-fast);
      white-space: nowrap;
    }
    
    .mobile-menu-nav a:hover,
    .mobile-menu-nav a.active {
      color: var(--color-accent);
    }
    
    .mobile-menu-nav a.active {
      font-weight: 600;
    }
  }

  @media (min-width: 769px) {
    .header-content {
      display: grid;
      grid-template-columns: auto 1fr auto;
      align-items: center;
    }

    .header-right {
      display: contents;
    }

    .main-nav {
      grid-column: 2;
      justify-self: center;
    }

    .theme-toggle-wrapper {
      grid-column: 3;
      justify-self: end;
      align-self: center;
      display: flex;
      align-items: center;
    }

    .mobile-menu-toggle {
      display: none;
    }

    .mobile-menu-overlay {
      display: none !important;
    }
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.mobile-menu-toggle');
    const overlay = document.querySelector('.mobile-menu-overlay');
    const close = document.querySelector('.mobile-menu-close');
    const body = document.body;
    
    function openMenu() {
      overlay?.classList.add('open');
      toggle?.classList.add('open');
      body.style.overflow = 'hidden';
    }
    
    function closeMenu() {
      overlay?.classList.remove('open');
      toggle?.classList.remove('open');
      body.style.overflow = '';
    }
    
    toggle?.addEventListener('click', () => {
      if (overlay?.classList.contains('open')) {
        closeMenu();
      } else {
        openMenu();
      }
    });
    
    close?.addEventListener('click', () => {
      closeMenu();
    });
    
    // Close menu when clicking on overlay background
    overlay?.addEventListener('click', (e) => {
      if (e.target === overlay) {
        closeMenu();
      }
    });
    
    // Close menu when clicking on a link
    const mobileLinks = overlay?.querySelectorAll('.mobile-menu-nav a');
    mobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        closeMenu();
      });
    });
  });
</script>
