---
import { NAV_ITEMS } from '../config';
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;
---

<header class={`site-header ${currentPath === '/' ? 'home' : ''}`}>
  <div class="container">
    <div class="header-content">
      <a href="/" class="site-title">
        <span class="name-first">Praveen</span>
        <span class="name-last">Yellamaraju</span>
      </a>
      
      <div class="header-right">
        <nav class="main-nav">
          <ul>
            {NAV_ITEMS.map(item => (
              <li>
                <a 
                  href={item.href}
                  class={currentPath === item.href ? 'active' : ''}
                  aria-current={currentPath === item.href ? 'page' : undefined}
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
        <ThemeToggle />
      </div>
      
      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<style>
  .site-header {
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(8px);
  }
  
  [data-theme="light"] .site-header,
  [data-theme="auto"] .site-header {
    background: rgba(253, 252, 251, 0.95);
  }
  
  [data-theme="dark"] .site-header {
    background: rgba(26, 26, 26, 0.95);
  }
  
  @media (prefers-color-scheme: dark) {
    [data-theme="auto"] .site-header {
      background: rgba(26, 26, 26, 0.95);
    }
  }
  
  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-md) 0;
    gap: var(--space-sm);
  }
  
  .header-right {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }
  
  .site-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--color-text);
    display: flex;
    gap: 0.4em;
    transition: opacity var(--transition-fast);
    flex-shrink: 1;
    min-width: 0;
  }
  
  .site-title:hover {
    opacity: 0.7;
  }
  
  .name-last {
    color: var(--color-text-secondary);
  }
  
  .main-nav ul {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .main-nav a {
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
    position: relative;
  }
  
  .main-nav a:hover,
  .main-nav a.active {
    color: var(--color-accent);
  }
  
  .main-nav a.active::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
  }
  
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    flex-shrink: 0;
  }
  
  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--color-text);
    transition: transform var(--transition-base);
  }
  
  @media (max-width: 768px) {
    .header-content {
      display: flex;
      padding: var(--space-sm) 0;
      gap: var(--space-xs);
    }
    
    .site-title {
      font-size: 1rem;
      flex: 1;
      min-width: 0;
      overflow: hidden;
    }
    
    .site-title .name-first,
    .site-title .name-last {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .header-right {
      position: relative;
      flex-shrink: 0;
      display: flex !important;
      align-items: center;
      gap: var(--space-xs);
    }
    
    .mobile-menu-toggle {
      display: flex;
      flex-shrink: 0;
      margin-left: var(--space-xs);
    }
    
    .main-nav {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--color-surface);
      border-bottom: 1px solid var(--color-border);
      padding: var(--space-md);
      display: none;
    }
    
    .main-nav.open {
      display: block;
    }
    
    .main-nav ul {
      flex-direction: column;
      gap: var(--space-sm);
    }
    
    .main-nav a.active::after {
      bottom: -4px;
    }
  }

  @media (min-width: 769px) {
    .header-content {
      display: grid;
      grid-template-columns: auto 1fr auto;
      align-items: center;
    }

    .header-right {
      display: contents;
    }

    .main-nav {
      grid-column: 2;
      justify-self: center;
    }

    .theme-toggle-wrapper {
      grid-column: 3;
      justify-self: end;
      align-self: center;
      display: flex;
      align-items: center;
    }
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.mobile-menu-toggle');
    const nav = document.querySelector('.main-nav');
    
    toggle?.addEventListener('click', () => {
      nav?.classList.toggle('open');
      toggle?.classList.toggle('open');
    });
  });
</script>
