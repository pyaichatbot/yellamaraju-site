---
interface Props {
  src: string;
  title?: string;
  caption?: string;
}

const { src, title = 'Audio', caption } = Astro.props;
---

<div class="audio-embed">
  <div class="audio-wrapper">
    <audio controls preload="metadata">
      <source src={src} type="audio/mpeg" />
      <source src={src} type="audio/ogg" />
      <source src={src} type="audio/wav" />
      <p>Your browser does not support the audio element. <a href={src}>Download the audio</a> instead.</p>
    </audio>
  </div>
  {title && <p class="audio-title">{title}</p>}
  {caption && <p class="audio-caption">{caption}</p>}
</div>

<style>
  .audio-embed {
    margin: var(--space-lg) 0;
    padding: var(--space-md);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }
  
  .audio-wrapper {
    width: 100%;
  }
  
  .audio-wrapper audio {
    width: 100%;
    height: 40px;
  }
  
  .audio-title {
    margin: var(--space-sm) 0 0 0;
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.95rem;
  }
  
  .audio-caption {
    margin: var(--space-xs) 0 0 0;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-style: italic;
  }
</style>

