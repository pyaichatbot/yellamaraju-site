---
interface Props {
  src: string;
  title?: string;
  caption?: string;
  poster?: string;
  width?: string;
}

const { src, title, caption, poster, width = '100%' } = Astro.props;
---

<div class="video-embed">
  <div class="video-wrapper">
    <video controls preload="metadata" width={width} poster={poster}>
      <source src={src} type="video/mp4" />
      <source src={src} type="video/webm" />
      <source src={src} type="video/ogg" />
      <p>Your browser does not support the video element. <a href={src}>Download the video</a> instead.</p>
    </video>
  </div>
  {title && <p class="video-title">{title}</p>}
  {caption && <p class="video-caption">{caption}</p>}
</div>

<style>
  .video-embed {
    margin: var(--space-lg) 0;
    padding: var(--space-md);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }
  
  .video-wrapper {
    width: 100%;
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: 4px;
    background: var(--color-code-bg);
  }
  
  .video-wrapper video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 4px;
  }
  
  .video-title {
    margin: var(--space-sm) 0 0 0;
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.95rem;
  }
  
  .video-caption {
    margin: var(--space-xs) 0 0 0;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-style: italic;
  }
</style>
