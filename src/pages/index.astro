---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import TagBadge from '../components/TagBadge.astro';
import { getCollection } from 'astro:content';
import { calculateReadingTime, sortPostsWithPinned, getUniqueTags } from '../utils/helpers';

const allPosts = await getCollection('blog', ({ data }) => !data.hide);
const sortedPosts = sortPostsWithPinned(allPosts);
// Show up to 3 posts: pinned posts first, then newest posts
const featuredPosts = sortedPosts.slice(0, 3);
const popularTags = getUniqueTags(allPosts).slice(0, 8);
---

<BaseLayout>
  <div class="home-page">
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <div class="hero-text animate-in">
            <h1 class="hero-title">
              Building Intelligent Systems<br />for Enterprise Scale
            </h1>
            <p class="hero-description">
              AI Advisor with 17+ years of experience, specializing in architecting agentic AI systems, 
              LLM-based solutions, and cloud-native architectures. Writing about the intersection of AI, 
              enterprise systems, and practical implementation strategies.
            </p>
            <div class="hero-cta">
              <a href="/blog" class="primary-button">Read the Blog</a>
              <a href="/about" class="secondary-button">About Me</a>
            </div>
          </div>
          <div class="hero-image animate-in animate-delay-1">
            <img src="/images/praveen.jpg" alt="Praveen Srinag Yellamaraju" />
          </div>
        </div>
      </div>
    </section>
    
    <section class="featured-posts">
      <div class="container">
        <div class="wide-wrapper">
          <h2 class="section-title">Featured Writing</h2>
          <div class="posts-grid">
            {featuredPosts.map((post, index) => (
              <div class={`animate-in animate-delay-${index + 1}`}>
                <PostCard
                  title={post.data.title}
                  description={post.data.description}
                  date={post.data.date}
                  tags={post.data.tags}
                  slug={post.slug}
                  readingTime={calculateReadingTime(post.body)}
                  featured={index === 0}
                  series={post.data.series}
                  seriesPart={post.data.seriesPart}
                />
              </div>
            ))}
          </div>
          <div class="view-all">
            <a href="/blog" class="text-link">View all posts â†’</a>
          </div>
        </div>
      </div>
    </section>
    
    <section class="topics">
      <div class="container">
        <div class="content-wrapper">
          <h2 class="section-title">Topics I Write About</h2>
          <div class="topics-grid">
            {popularTags.map(tag => (
              <TagBadge tag={tag} />
            ))}
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .home-page {
    padding-bottom: var(--space-xl);
  }
  
  /* Hero Section */
  .hero {
    padding: var(--space-xl) 0;
    margin-bottom: var(--space-xl);
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--space-lg);
    align-items: center;
  }
  
  .hero-title {
    font-size: 3rem;
    line-height: 1.1;
    margin-bottom: var(--space-sm);
    font-weight: 900;
  }
  
  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    max-width: 600px;
  }
  
  .hero-cta {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }
  
  .primary-button {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: var(--color-accent);
    color: white;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    transition: all var(--transition-base);
  }
  
  .primary-button:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(37, 99, 235, 0.3);
  }
  
  .secondary-button {
    display: inline-block;
    padding: 0.875rem 2rem;
    border: 2px solid var(--color-accent);
    color: var(--color-accent);
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    transition: all var(--transition-base);
  }
  
  .secondary-button:hover {
    background: var(--color-accent);
    color: white;
    transform: translateY(-2px);
  }
  
  .hero-image {
    position: relative;
  }
  
  .hero-image img {
    width: 100%;
    max-width: 320px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    margin-left: auto;
  }
  
  /* Featured Posts */
  .featured-posts {
    margin-bottom: var(--space-xl);
  }
  
  .section-title {
    font-size: 2rem;
    margin-bottom: var(--space-lg);
    text-align: center;
  }
  
  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .view-all {
    text-align: center;
    margin-top: var(--space-lg);
  }
  
  .text-link {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .text-link:hover {
    color: var(--color-accent-hover);
  }
  
  /* Topics */
  .topics {
    padding: var(--space-lg) 0;
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }
  
  .topics-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
    
    .hero-image img {
      max-width: 280px;
      margin: 0 auto;
    }
  }
  
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .hero-description {
      font-size: 1.1rem;
    }
    
    .section-title {
      font-size: 1.5rem;
    }
  }
</style>
