---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { readFile } from 'fs/promises';
import { join } from 'path';
import { marked } from 'marked';

export async function getStaticPaths() {
  const templates = [
    'ai-use-case-assessment-worksheet',
    'ai-architecture-gate',
    'ai-roi-calculator',
    'poc-validation-checklist',
    'ai-level-decision-matrix'
  ];

  return templates.map((template) => ({
    params: { template }
  }));
}

const { template } = Astro.params;
const templatePath = join(process.cwd(), 'public', 'templates', `${template}.md`);

let templateContent = '';
let templateTitle = '';
let templateDescription = '';
let templateHtml = '';

try {
  const content = await readFile(templatePath, 'utf-8');
  
  // Extract title from first # heading
  const titleMatch = content.match(/^# (.+)$/m);
  templateTitle = titleMatch ? titleMatch[1] : template.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
  
  // Get first paragraph as description
  const descMatch = content.match(/^[A-Z][^#\n]{50,200}\./m);
  templateDescription = descMatch ? descMatch[0].substring(0, 150) + '...' : 'AI use case evaluation template';
  
  // Remove metadata footer (Template Version, Last Updated, Related Templates)
  let cleanedContent = content.replace(/\n---\n\n\*\*Template Version:.*$/s, '');
  cleanedContent = cleanedContent.replace(/\*\*Related Templates:.*$/s, '');
  
  // Convert markdown to HTML
  templateHtml = await marked(cleanedContent);
} catch (error) {
  templateHtml = '<p>Template not found.</p>';
  templateTitle = 'Template Not Found';
  templateDescription = 'The requested template could not be loaded.';
}
---

<BaseLayout 
  title={templateTitle}
  description={templateDescription}
>
  <div class="template-viewer">
    <div class="template-header">
      <a href="/templates" class="back-link">‚Üê Back to Templates</a>
      <div class="template-actions-top">
        <a href={`/templates/${template}.md`} class="btn-download" download>Download Markdown</a>
      </div>
    </div>

    <article class="template-content">
      <div class="markdown-content" set:html={templateHtml} />
    </article>

    <div class="template-footer">
      <p>
        <strong>Need help?</strong> This template is part of the framework described in 
        <a href="/blog/before-you-build-ai-use-case-evaluation">"Before You Build: A Realistic Framework for Evaluating AI Use Cases"</a>.
      </p>
      <p>
        Download the Markdown file to fill it out, or copy the content to your preferred document editor.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .template-viewer {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: 1px solid var(--color-border);
  }

  .back-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .btn-download {
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    font-size: 0.9rem;
  }

  .btn-download:hover {
    background: var(--color-primary-dark);
  }

  .template-content {
    background: var(--color-bg-secondary);
    padding: var(--space-lg);
    border-radius: 8px;
    border: 1px solid var(--color-border);
    margin-bottom: var(--space-lg);
  }

  .markdown-content {
    line-height: 1.8;
    color: var(--color-text);
  }

  .markdown-content h1 {
    font-size: 2rem;
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-border);
  }
  
  .markdown-content h2 {
    font-size: 1.5rem;
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }
  
  .markdown-content h3 {
    font-size: 1.25rem;
    margin-top: var(--space-md);
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .markdown-content p {
    margin-bottom: var(--space-md);
  }

  .markdown-content ul,
  .markdown-content ol {
    margin-bottom: var(--space-md);
    padding-left: var(--space-xl);
  }

  .markdown-content li {
    margin-bottom: var(--space-xs);
  }

  .markdown-content code {
    background: var(--color-bg-tertiary);
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
  }

  .markdown-content pre {
    background: var(--color-bg-tertiary);
    padding: var(--space-md);
    border-radius: 4px;
    overflow-x: auto;
    margin-bottom: var(--space-md);
  }

  .markdown-content pre code {
    background: none;
    padding: 0;
  }

  .markdown-content table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: var(--space-md);
  }

  .markdown-content table th,
  .markdown-content table td {
    padding: var(--space-sm);
    border: 1px solid var(--color-border);
    text-align: left;
  }

  .markdown-content table th {
    background: var(--color-bg-tertiary);
    font-weight: 600;
  }

  .markdown-content input[type="checkbox"],
  .markdown-content input[type="text"] {
    margin-right: var(--space-xs);
  }

  .template-footer {
    background: var(--color-bg-secondary);
    padding: var(--space-md);
    border-radius: 8px;
    border-left: 4px solid var(--color-primary);
    margin-bottom: var(--space-lg);
  }

  .template-footer p {
    margin-bottom: var(--space-sm);
    color: var(--color-text-secondary);
  }

  .template-footer a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .template-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .template-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }

    .template-content {
      padding: var(--space-lg);
    }
  }
</style>

