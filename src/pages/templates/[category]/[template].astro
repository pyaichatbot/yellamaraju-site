---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { readFile } from 'fs/promises';
import { join } from 'path';
import { marked } from 'marked';
import { getTemplateBySlug, getCategoryById, categories } from '../../../data/templates';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const paths = [];
  
  // Generate paths for new category-based structure
  for (const category of categories) {
    const templates = await import('../../../data/templates');
    const categoryTemplates = templates.getTemplatesByCategory(category.id);
    
    for (const template of categoryTemplates) {
      paths.push({
        params: { category: category.id, template: template.slug }
      });
    }
  }
  
  return paths;
}

const { category: categoryId, template: templateSlug } = Astro.params;
const template = getTemplateBySlug(templateSlug || '');
const category = categoryId ? getCategoryById(categoryId) : null;

if (!template) {
  return Astro.redirect('/templates');
}

const templatePath = join(process.cwd(), 'public', 'templates', `${templateSlug}.md`);

let templateTitle = '';
let templateDescription = '';
let templateHtml = '';

try {
  const content = await readFile(templatePath, 'utf-8');
  
  // Extract title from first # heading
  const titleMatch = content.match(/^# (.+)$/m);
  templateTitle = titleMatch ? titleMatch[1] : template.title;
  
  // Get first paragraph as description
  const descMatch = content.match(/^[A-Z][^#\n]{50,200}\./m);
  templateDescription = descMatch ? descMatch[0].substring(0, 150) + '...' : template.description;
  
  // Remove metadata footer (Template Version, Last Updated, Related Templates)
  let cleanedContent = content.replace(/\n---\n\n\*\*Template Version:.*$/s, '');
  cleanedContent = cleanedContent.replace(/\*\*Related Templates:.*$/s, '');
  
  // Convert markdown to HTML
  templateHtml = await marked(cleanedContent);
} catch (error) {
  templateHtml = '<p>Template not found.</p>';
  templateTitle = 'Template Not Found';
  templateDescription = 'The requested template could not be loaded.';
}

// Get related blog post if available
let relatedBlogPost = null;
if (template.relatedBlogPost) {
  const blogPosts = await getCollection('blog', ({ data }) => !data.draft && !data.hide);
  relatedBlogPost = blogPosts.find(p => p.slug === template.relatedBlogPost);
}
---

<BaseLayout 
  title={templateTitle}
  description={templateDescription}
>
  <div class="template-viewer">
    <div class="template-header">
      <nav class="breadcrumb">
        <a href="/templates">Templates</a>
        {category && (
          <>
            <span class="separator">/</span>
            <a href={`/templates/${category.id}`}>{category.name}</a>
          </>
        )}
        <span class="separator">/</span>
        <span class="current">{templateTitle}</span>
      </nav>
      <div class="template-actions-top">
        <a href={`/templates/${templateSlug}.md`} class="btn-download" download>Download Markdown</a>
      </div>
    </div>

    <article class="template-content">
      <div class="markdown-content" set:html={templateHtml} />
    </article>

    <div class="template-footer">
      {relatedBlogPost ? (
        <>
          <p>
            <strong>Need help?</strong> This template is part of the {category?.name || 'template'} collection described in{' '}
            <a href={`/blog/${relatedBlogPost.slug}`}>"{relatedBlogPost.data.title}"</a>.
          </p>
          <p>
            Download the Markdown file to fill it out, or copy the content to your preferred document editor.
          </p>
        </>
      ) : (
        <>
          <p>
            <strong>Note:</strong> Download the Markdown file to fill it out, or copy the content to your preferred document editor.
          </p>
        </>
      )}
    </div>
  </div>
</BaseLayout>

<style>
  .template-viewer {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: 1px solid var(--color-border);
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .breadcrumb a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: var(--color-accent);
  }

  .breadcrumb .separator {
    color: var(--color-text-secondary);
    opacity: 0.5;
  }

  .breadcrumb .current {
    color: var(--color-text);
    font-weight: 500;
  }

  .btn-download {
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    font-size: 0.9rem;
    transition: background 0.2s;
  }

  .btn-download:hover {
    background: var(--color-primary-dark);
  }

  .template-content {
    background: var(--color-bg-secondary);
    padding: var(--space-lg);
    border-radius: 8px;
    border: 1px solid var(--color-border);
    margin-bottom: var(--space-lg);
  }

  .markdown-content {
    line-height: 1.8;
    color: var(--color-text);
  }

  .markdown-content h1 {
    font-size: 2rem;
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-border);
  }
  
  .markdown-content h2 {
    font-size: 1.5rem;
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }
  
  .markdown-content h3 {
    font-size: 1.25rem;
    margin-top: var(--space-md);
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .markdown-content p {
    margin-bottom: var(--space-md);
  }

  .markdown-content ul,
  .markdown-content ol {
    margin-bottom: var(--space-md);
    padding-left: var(--space-xl);
  }

  .markdown-content li {
    margin-bottom: var(--space-xs);
  }

  .markdown-content code {
    background: var(--color-bg-tertiary);
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
  }

  .markdown-content pre {
    background: var(--color-bg-tertiary);
    padding: var(--space-md);
    border-radius: 4px;
    overflow-x: auto;
    margin-bottom: var(--space-md);
  }

  .markdown-content pre code {
    background: none;
    padding: 0;
  }

  .markdown-content table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: var(--space-md);
  }

  .markdown-content table th,
  .markdown-content table td {
    padding: var(--space-sm);
    border: 1px solid var(--color-border);
    text-align: left;
  }

  .markdown-content table th {
    background: var(--color-bg-tertiary);
    font-weight: 600;
  }

  .markdown-content input[type="checkbox"],
  .markdown-content input[type="text"] {
    margin-right: var(--space-xs);
  }

  .template-footer {
    background: var(--color-bg-secondary);
    padding: var(--space-md);
    border-radius: 8px;
    border-left: 4px solid var(--color-primary);
    margin-bottom: var(--space-lg);
  }

  .template-footer p {
    margin-bottom: var(--space-sm);
    color: var(--color-text-secondary);
  }

  .template-footer a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .template-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .template-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }

    .template-content {
      padding: var(--space-lg);
    }
  }
</style>

