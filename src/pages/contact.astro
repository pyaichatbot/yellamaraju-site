---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE } from '../config';
---

<BaseLayout title="Contact" description="Get in touch with Praveen Srinag Yellamaraju for collaborations, speaking engagements, or discussions about AI and enterprise architecture.">
  <div class="contact-page">
    <div class="container">
      <div class="contact-wrapper">
        <header class="page-header">
          <h1>Tell us about your project</h1>
          <p class="page-description">
            I'm always open to thoughtful conversations about AI architecture, enterprise systems, 
            and collaboration opportunities.
          </p>
        </header>
        
        <div class="contact-layout">
          <!-- Left Column: Benefits & Contact Info -->
          <div class="contact-info">
            <div class="benefits-list">
              <div class="benefit-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>I respond within 2-3 business days</span>
              </div>
              <div class="benefit-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>NDA available upon request</span>
              </div>
              <div class="benefit-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>Access to AI architecture expertise</span>
              </div>
            </div>
            
            <div class="contact-details">
              <div class="email-section">
                <label class="detail-label">Email</label>
                <div class="email-container">
                  <a href="mailto:contact@yellamaraju.com" class="email-link">
                    contact@yellamaraju.com
                  </a>
                  <button 
                    class="email-copy-btn" 
                    data-email="contact@yellamaraju.com"
                    aria-label="Copy email address"
                    title="Copy email address"
                  >
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M16 1H4C2.9 1 2 1.9 2 3V17H4V3H16V1ZM19 5H8C6.9 5 6 5.9 6 7V21C6 22.1 6.9 23 8 23H19C20.1 23 21 22.1 21 21V7C21 5.9 20.1 5 19 5ZM19 21H8V7H19V21Z" fill="currentColor"/>
                    </svg>
                  </button>
                  <span class="email-copy-feedback">Email copied!</span>
                </div>
              </div>
              
              <div class="linkedin-section">
                <label class="detail-label">Connect</label>
                <a 
                  href={`https://${SITE.linkedin}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="linkedin-link"
                >
                  LinkedIn Profile
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              </div>
              
            </div>
          </div>
          
          <!-- Right Column: Contact Form -->
          <div class="contact-form-wrapper">
            <form class="contact-form" id="contact-form">
              <div class="form-group">
                <label class="form-label">Service Type</label>
                <div class="service-buttons">
                  <button type="button" class="service-btn active" data-service="consulting">
                    Consulting
                  </button>
                  <button type="button" class="service-btn" data-service="architecture">
                    Architecture
                  </button>
                  <button type="button" class="service-btn" data-service="workshop">
                    Workshop
                  </button>
                  <button type="button" class="service-btn" data-service="collaboration">
                    Collaboration
                  </button>
                </div>
              </div>
              
              <div class="form-group">
                <label for="full-name" class="form-label">Full Name *</label>
                <input 
                  type="text" 
                  id="full-name" 
                  name="name" 
                  class="form-input" 
                  required
                  placeholder="Your name"
                />
              </div>
              
              <div class="form-group">
                <label for="email" class="form-label">Email *</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="form-input" 
                  required
                  placeholder="your.email@example.com"
                />
              </div>
              
              <div class="form-group">
                <label for="project-details" class="form-label">Project Details *</label>
                <textarea 
                  id="project-details" 
                  name="message" 
                  class="form-textarea" 
                  rows="6"
                  required
                  placeholder="Tell me about your project, goals, timeline, and any specific requirements..."
                ></textarea>
              </div>
              
              <div class="form-group">
                <label class="form-label">Attach a file (optional)</label>
                <div class="file-upload">
                  <input type="file" id="file-upload" class="file-input" accept=".pdf,.doc,.docx,.txt" />
                  <label for="file-upload" class="file-label">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15M17 8L12 3M12 3L7 8M12 3V15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span class="file-text">Choose a file or drag and drop here</span>
                    <span class="file-hint">PDF, DOC, DOCX, TXT (max 10MB)</span>
                  </label>
                </div>
              </div>
              
              <button type="submit" class="submit-button">
                Submit inquiry
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .contact-page {
    padding: var(--space-lg) 0 var(--space-xl);
  }
  
  .contact-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-md);
  }
  
  .page-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
  }
  
  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }
  
  .page-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: var(--space-xl);
    align-items: start;
  }
  
  /* Left Column: Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }
  
  .benefits-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .benefit-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text);
    font-size: 0.95rem;
  }
  
  .benefit-item svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }
  
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .detail-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .email-section {
    display: flex;
    flex-direction: column;
  }
  
  .email-container {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    position: relative;
  }
  
  .email-link {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .email-link:hover {
    color: var(--color-accent);
  }
  
  .email-copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    padding: 0;
    background: var(--color-code-bg);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }
  
  .email-copy-btn:hover {
    background: var(--color-surface);
    border-color: var(--color-accent);
    color: var(--color-accent);
  }
  
  .email-copy-btn svg {
    width: 16px;
    height: 16px;
  }
  
  .email-copy-feedback {
    position: absolute;
    left: 0;
    bottom: -1.5rem;
    font-size: 0.875rem;
    color: var(--color-accent);
    opacity: 0;
    transform: translateY(-5px);
    transition: all var(--transition-fast);
    pointer-events: none;
    white-space: nowrap;
  }
  
  .email-copy-feedback.show {
    opacity: 1;
    transform: translateY(0);
  }
  
  .linkedin-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .linkedin-link:hover {
    color: var(--color-accent-hover);
  }
  
  .linkedin-link svg {
    width: 14px;
    height: 14px;
  }
  
  /* Right Column: Contact Form */
  .contact-form-wrapper {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: var(--space-lg);
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .form-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .service-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }
  
  .service-btn {
    padding: 0.625rem 1rem;
    background: var(--color-code-bg);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
    font-family: var(--font-sans);
  }
  
  .service-btn:hover {
    background: var(--color-surface);
    border-color: var(--color-accent);
    color: var(--color-accent);
  }
  
  .service-btn.active {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }
  
  .form-input,
  .form-textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    font-size: 0.95rem;
    font-family: var(--font-sans);
    color: var(--color-text);
    transition: all var(--transition-fast);
  }
  
  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }
  
  .file-upload {
    position: relative;
  }
  
  .file-input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }
  
  .file-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    padding: var(--space-lg);
    background: var(--color-code-bg);
    border: 2px dashed var(--color-border);
    border-radius: 6px;
    cursor: pointer;
    transition: all var(--transition-fast);
    text-align: center;
  }
  
  .file-label:hover {
    border-color: var(--color-accent);
    background: var(--color-surface);
  }
  
  .file-label svg {
    color: var(--color-text-tertiary);
  }
  
  .file-text {
    font-size: 0.9rem;
    color: var(--color-text);
    font-weight: 500;
  }
  
  .file-hint {
    font-size: 0.8rem;
    color: var(--color-text-tertiary);
  }
  
  .submit-button {
    padding: 0.875rem 2rem;
    background: var(--color-accent);
    color: white;
    font-weight: 600;
    font-size: 1rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: var(--font-sans);
    margin-top: var(--space-sm);
  }
  
  .submit-button:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  }
  
  .submit-button:active {
    transform: translateY(0);
  }
  
  @media (max-width: 1024px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
    
    .contact-info {
      gap: var(--space-lg);
    }
  }
  
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }
    
    .page-description {
      font-size: 1rem;
    }
    
    .contact-form-wrapper {
      padding: var(--space-md);
    }
    
    .service-buttons {
      flex-direction: column;
    }
    
    .service-btn {
      width: 100%;
    }
    
    .email-container {
      flex-wrap: wrap;
    }
    
    .email-copy-feedback {
      position: static;
      display: block;
      margin-top: var(--space-xs);
      width: 100%;
    }
  }
</style>

<script>
  (function() {
    if (typeof window === 'undefined') return;
    
    // Email copy functionality
    const copyBtn = document.querySelector('.email-copy-btn');
    if (copyBtn) {
      const email = copyBtn.getAttribute('data-email') || '';
      const feedback = document.querySelector('.email-copy-feedback');
      
      copyBtn.addEventListener('click', function(e: Event) {
        e.preventDefault();
        e.stopPropagation();
        
        if (navigator.clipboard && navigator.clipboard.writeText && email) {
          navigator.clipboard.writeText(email).then(() => {
            showFeedback();
          }).catch(() => {
            fallbackCopy(email);
          });
        } else if (email) {
          fallbackCopy(email);
        }
      });
      
      function showFeedback() {
        if (feedback) {
          feedback.classList.add('show');
          setTimeout(() => {
            feedback.classList.remove('show');
          }, 2000);
        }
      }
      
      function fallbackCopy(text: string) {
        const textarea = document.createElement('textarea');
        textarea.value = text;
        textarea.style.position = 'fixed';
        textarea.style.opacity = '0';
        document.body.appendChild(textarea);
        textarea.select();
        try {
          document.execCommand('copy');
          showFeedback();
        } catch (err) {
          console.error('Failed to copy:', err);
        }
        document.body.removeChild(textarea);
      }
    }
    
    // Service button selection
    const serviceButtons = document.querySelectorAll('.service-btn');
    
    serviceButtons.forEach(btn => {
      btn.addEventListener('click', function(this: HTMLElement) {
        serviceButtons.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
      });
    });
    
    // Form submission
    const form = document.getElementById('contact-form') as HTMLFormElement;
    if (form) {
      form.addEventListener('submit', function(e: Event) {
        e.preventDefault();
        
        const formData = new FormData(form);
        const service = document.querySelector('.service-btn.active')?.getAttribute('data-service') || '';
        
        // Build email subject and body
        const subject = encodeURIComponent(`Contact Form: ${service || 'General Inquiry'}`);
        const body = encodeURIComponent(
          `Name: ${formData.get('name')}\n` +
          `Email: ${formData.get('email')}\n` +
          `Service: ${service || 'Not specified'}\n\n` +
          `Project Details:\n${formData.get('message')}`
        );
        
        // Open mail client
        window.location.href = `mailto:contact@yellamaraju.com?subject=${subject}&body=${body}`;
      });
    }
    
    // File upload preview
    const fileInput = document.getElementById('file-upload') as HTMLInputElement;
    const fileLabel = document.querySelector('.file-label');
    
    if (fileInput && fileLabel) {
      fileInput.addEventListener('change', function(e: Event) {
        const target = e.target as HTMLInputElement;
        const file = target.files?.[0];
        if (file) {
          const fileText = fileLabel.querySelector('.file-text');
          if (fileText) {
            fileText.textContent = file.name;
          }
        }
      });
    }
  })();
</script>
