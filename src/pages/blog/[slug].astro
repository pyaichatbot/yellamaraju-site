---
import { getCollection } from 'astro:content';
import PostLayout from '../../layouts/PostLayout.astro';
import { calculateReadingTime } from '../../utils/helpers';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const readingTime = calculateReadingTime(post.body);

// Get series posts if this post is part of a series
let seriesPosts = undefined;
if (post.data.series) {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  const seriesPostsList = allPosts
    .filter(p => p.data.series === post.data.series && p.data.seriesPart)
    .sort((a, b) => (a.data.seriesPart || 0) - (b.data.seriesPart || 0))
    .map(p => ({
      title: p.data.title,
      slug: p.slug,
      part: p.data.seriesPart || 0,
    }));
  
  if (seriesPostsList.length > 0) {
    seriesPosts = seriesPostsList;
  }
}
---

<PostLayout
  title={post.data.title}
  description={post.data.description}
  date={post.data.date}
  tags={post.data.tags}
  image={post.data.image}
  readingTime={readingTime}
  series={post.data.series}
  seriesPart={post.data.seriesPart}
  seriesPosts={seriesPosts}
  post={post}
>
  <Content />
</PostLayout>
