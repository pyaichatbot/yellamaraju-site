    color: var(--color-text-tertiary);
    margin-bottom: var(--space-sm);
  }
  
  .separator {
    opacity: 0.5;
  }
  
  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: var(--space-sm);
    animation: fadeIn 0.6s ease-out;
  }
  
