  }
  
  .series-posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .series-post-link {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) var(--space-md);
    border-radius: 6px;
    text-decoration: none;
