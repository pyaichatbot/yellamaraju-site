    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-code-bg);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    font-size: 0.875rem;
    margin-bottom: var(--space-md);
  }
  
  .series-label {
    color: var(--color-text-secondary);
    font-weight: 500;
  }
  
